<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<TV_Faq>
			<active>true</active>
			<codePool>local</codePool>
			<version>2.0.0</version>
		</TV_Faq>
	</modules>
	
	<admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <TV_Faq before="Mage_Adminhtml">TV_Faq_Adminhtml</TV_Faq>
                    </modules>
                </args>
            </adminhtml>
        </routers>
	</admin>

	<frontend>
		<routers>
			<faq>
				<use>standard</use>
				<args>
					<module>TV_Faq</module>
					<frontName>faq</frontName>
				</args>
			</faq>
		</routers>
		<translate>
			<modules>
				<TV_Faq>
					<files>
						<default>TV_Faq.csv</default>
					</files>
				</TV_Faq>
			</modules>
		</translate>
		<layout>
			<updates>
				<faq>
					<file>faq.xml</file>
				</faq>
			</updates>
		</layout>
	</frontend>
	
	<global>
		<helpers>
			<tv_faq>
				<class>TV_Faq_Helper</class>
			</tv_faq>
		</helpers>
		
		<blocks>
			<tv_faq>
				<class>TV_Faq_Block</class>
			</tv_faq>
		</blocks>
		
		<models>
			<tv_faq>
				<class>TV_Faq_Model</class>
				<resourceModel>tv_faq_mysql4</resourceModel>
			</tv_faq>
			<tv_faq_mysql4>
				<class>TV_Faq_Model_Mysql4</class>
				<entities>
					<category>
						<table>faq_category</table>
					</category>
					<category_item>
						<table>faq_category_item</table>
					</category_item>
                    <category_store>
                        <table>faq_category_store</table>
                    </category_store>
					<faq>
						<table>faq</table>
					</faq>
					<faq_store>
						<table>faq_store</table>
					</faq_store>
					<question>
						<table>faq_customer_questions</table>
					</question>
				</entities>
			</tv_faq_mysql4>
		</models>
		
		<resources>
			<faq_setup>
				<setup>
					<module>TV_Faq</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</faq_setup>
			<faq_write>
				<connection>
					<use>core_write</use>
				</connection>
			</faq_write>
			<faq_read>
				<connection>
					<use>core_read</use>
				</connection>
			</faq_read>
		</resources>
	</global>

	<adminhtml>
		<translate>
			<modules>
				<TV_Faq>
					<files>
						<default>TV_Faq.csv</default>
					</files>
				</TV_Faq>
			</modules>
		</translate>
		<layout>
			<updates>
				<faq>
					<file>faq.xml</file>
				</faq>
			</updates>
		</layout>
	</adminhtml>
	<install>
		<translate>
			<modules>
				<TV_Faq>
					<files>
						<default>TV_Faq.csv</default>
					</files>
				</TV_Faq>
			</modules>
		</translate>
	</install>
</config>
