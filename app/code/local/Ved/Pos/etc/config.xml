<?xml version="1.0"?>
<config>
    <modules>
        <Ved_Pos>
            <version>0.1.0</version>
        </Ved_Pos>
    </modules>
    <frontend>
        <routers>
            <pos>
                <use>standard</use>
                <args>
                    <module>Ved_Pos</module>
                    <frontName>pos</frontName>
                </args>
            </pos>
        </routers>
        <layout>
            <updates>
                <pos>
                    <file>ved_pos.xml</file>
                </pos>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <pos>
                <class>Ved_Pos_Block</class>
            </pos>
        </blocks>
    </global>
</config>
