/* @var $this Mage_Reports_Block_Product_Viewed */
?>
<?php if ($_products = $this->getRecentlyViewedProducts()): ?>
<div class="block block-list block-viewed">
    <div class="block-title">
        <strong><span><?php echo $this->__('Recently Viewed Products') ?></span></strong>
    </div>
    <div class="block-content">
        <ol id="recently-viewed-items">
        <?php foreach ($_products as $_item): ?>
			<?php $oldPrice = $_item->getPrice();
				$newPrice = $_item->getFinalPrice(); ?>
            <li class="item">
             <p><a href="<?php echo $this->getProductUrl($_item) ?>">
			 <img class="product-image" src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(140, 140) ?>" width="140" height="140" alt="<?php echo $this->htmlEscape($_item->getName()) ?>" /> </a></p>
			<div class="product-details">
				<p class="product-name"><a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a></p>
				<?php if($oldPrice != $newPrice) :?>					
					<span class="old-price">
						<span class="price">
							<?php echo number_format($oldPrice, 0, ",", ".") ; ?>
						</span>
					</span>
				<?php endif ?>
				<span class="regular-price">
					<span class="price">
						<?php echo number_format($newPrice, 0,"," , ".") . " VND";  ?>
					</span>
				</span>
			</div>
            </li>
        <?php endforeach; ?>
        </ol>
        <script type="text/javascript">decorateList('recently-viewed-items');</script>
    </div>
</div>
<?php endif; ?>
