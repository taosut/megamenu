if (!function_exists('isOutOfOfficeHours')) {
    function isOutOfOfficeHours()
    {

        date_default_timezone_set("Asia/Ho_Chi_Minh");

        $endHour = 18;
        $startHour = 9;

        $hour = date('H', time());
        $min = date('i', time());
        if (($hour == ($endHour - 1) && $min >= 59) ||
            ($hour >= $endHour) ||
            ($hour < ($startHour))
        ) {
            return true;
        }
        return false;
    }
}

