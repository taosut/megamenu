<?php
/**
 * Pager template
 *
 * @see Mage_Page_Block_Html_Pager
 */
?>
<?php if ($this->getCollection()->getSize()): ?>
    <?php if ($this->getLastPageNum() > 1): ?>
        <span>Trang <b><?php echo $this->getCurrentPage(); ?>/<?php echo $this->getLastPageNum(); ?></b></span>
        <a href="<?php echo $this->getFirstPageUrl() ?>" title="Trang đầu"><i class="fa fa-angle-double-left"></i></a>
        <a class="previous<?php if (!$this->getAnchorTextForPrevious()): ?> i-previous<?php endif; ?>"
           href="<?php echo $this->getPreviousPageUrl() ?>" title="Trang trước">
            <?php if (!$this->getAnchorTextForPrevious()): ?>
                <i class="fa fa-angle-left"></i>
            <?php else: ?>
                <?php echo $this->getAnchorTextForPrevious() ?>
            <?php endif; ?>
        </a>

        <?php foreach ($this->getFramePages() as $_page): ?>
            <?php if ($this->isPageCurrent($_page)): ?>
                <a class="active"><?php echo $_page ?></a>
            <?php else: ?>
                <a href="<?php echo $this->getPageUrl($_page) ?>"><?php echo $_page ?></a>
            <?php endif; ?>
        <?php endforeach; ?>

        <a class="next<?php if (!$this->getAnchorTextForNext()): ?> i-next<?php endif; ?>"
           href="<?php echo $this->getNextPageUrl() ?>" title="Trang kế">
            <?php if (!$this->getAnchorTextForNext()): ?>
                <i class="fa fa-angle-right"></i>
            <?php else: ?>
                <?php echo $this->getAnchorTextForNext() ?>
            <?php endif; ?>
        </a>
        <a href="<?php echo $this->getLastPageUrl() ?>" title="Trang cuối"><i class="fa fa-angle-double-right"></i></a>

        <div class="bp-pagination-block hidden">
            <div class="col-md-12 col-sm-12 bp-pagination-content">
                <span>Trang <b><?php echo $this->getCurrentPage(); ?>/<?php echo $this->getLastPageNum(); ?></b></span>
                <a class="bp-pagination-item"
                   onclick="paginateProductModal('<?php echo $this->getFirstPageUrl(); ?>')" title="Trang đầu">
                    <i class="fa fa-angle-double-left"></i>
                </a>
                <a class="bp-pagination-item previous<?php if (!$this->getAnchorTextForPrevious()): ?> i-previous<?php endif; ?>"
                   onclick="paginateProductModal('<?php echo $this->getPreviousPageUrl(); ?>')"
                   title="Trang trước">
                    <?php if (!$this->getAnchorTextForPrevious()): ?>
                        <i class="fa fa-angle-left"></i>
                    <?php else: ?>
                        <?php echo $this->getAnchorTextForPrevious() ?>
                    <?php endif; ?>
                </a>

                <?php foreach ($this->getFramePages() as $_page): ?>
                    <?php if ($this->isPageCurrent($_page)): ?>
                        <a class="bp-pagination-item active"><?php echo $_page ?></a>
                    <?php else: ?>
                        <a class="bp-pagination-item"
                           onclick="paginateProductModal('<?php echo $this->getPageUrl($_page); ?>')"><?php echo $_page ?></a>
                    <?php endif; ?>
                <?php endforeach; ?>

                <a class="bp-pagination-item next<?php if (!$this->getAnchorTextForNext()): ?> i-next<?php endif; ?>"
                   onclick="paginateProductModal('<?php echo $this->getNextPageUrl(); ?>')"
                   title="Trang kế">
                    <?php if (!$this->getAnchorTextForNext()): ?>
                        <i class="fa fa-angle-right"></i>
                    <?php else: ?>
                        <?php echo $this->getAnchorTextForNext() ?>
                    <?php endif; ?>
                </a>
                <a class="bp-pagination-item"
                   onclick="paginateProductModal('<?php echo $this->getLastPageUrl(); ?>')" title="Trang cuối">
                    <i class="fa fa-angle-double-right"></i>
                </a>
            </div>
        </div>
    <?php endif; ?>
<?php endif ?>
